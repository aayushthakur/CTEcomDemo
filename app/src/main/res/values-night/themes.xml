<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/flipkart_blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/flipkart_yellow</item>
        <item name="android:statusBarColor">@color/flipkart_blue</item>
        <item name="android:navigationBarColor">@color/flipkart_black</item>
    </style>

    <!-- Button style -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/flipkart_yellow</item>
        <item name="android:textColor">@color/flipkart_black</item>
    </style>

    <!-- Secondary Button style -->
    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/coral</item>
        <item name="android:textColor">@color/flipkart_black</item>
    </style>

    <!-- Alert style -->
    <style name="AlertStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/alert_red</item>
        <item name="android:background">@color/gray_light</item>
    </style>


    <style name="ActionBarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/flipkart_blue</item> <!-- Primary color for the toolbar -->
        <item name="android:titleTextStyle">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/blue_light1</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/flipkart_yellow</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">500</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowBackground">@color/flipkart_yellow</item>
        <item name="android:statusBarColor">@color/flipkart_blue</item>
    </style>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/flipkart_blue</item>
    </style>

    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Dialog Background Color -->
        <item name="colorPrimary">#027CD5</item> <!-- Flipkart Blue -->
        <item name="colorPrimaryVariant">#006CB4</item> <!-- Darker Shade -->
        <item name="colorAccent">#FFDE14</item> <!-- Flipkart Yellow -->
        <item name="android:textColorPrimary">#000000</item> <!-- Black Text -->
        <item name="android:colorBackground">#FFFFFF</item> <!-- White Background -->
    </style>
</resources>
